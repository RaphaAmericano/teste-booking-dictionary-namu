generator client {
  provider = "prisma-client-js"
}

generator seed {
  provider = "node ./src/infrasctructure/database/prisma/seed/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  auth       Auth?
}

model Auth {
  id         String   @id @default(uuid())
  password   String
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String   @unique
}

model Word {
  id     String @id @default(uuid())
  word   String
  number Int
}
